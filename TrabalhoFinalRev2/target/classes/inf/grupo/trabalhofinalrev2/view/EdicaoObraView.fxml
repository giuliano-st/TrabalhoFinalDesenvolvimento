<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inf.grupo.trabalhofinalrev2.controller.EdicaoObraController">

    <!-- Cabeçalho -->
    <top>
        <VBox alignment="CENTER" spacing="5.0"
              style="-fx-background-color: #f0f0f0; -fx-padding: 10;"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Edição de Obra ✏️" textFill="#006494">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Separator/>
            </children>
        </VBox>
    </top>

    <!-- Conteúdo central -->
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>

                <!-- Dados Comuns -->
                <Label text="Dados Comuns da Obra" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <children>
                        <TextField fx:id="txtTituloPrincipal" promptText="Título Principal"
                                   GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtCapa" promptText="Capa"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtLocal" promptText="Local"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtData" promptText="Data"
                                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtDescFisica" promptText="Descrição Física"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>

                <Separator/>

                <!-- Associação com outros dados -->
                <Label text="Associação com Outros Dados" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <children>
                        <ComboBox fx:id="comboAssunto" promptText="Assunto" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="comboEditora" promptText="Editora" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="comboAutor" promptText="Autor" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    </children>
                </GridPane>

                <Separator/>

                <!-- Detalhes específicos -->
                <Label text="Detalhes Específicos" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <children>
                        <TextField fx:id="txtNumeroChamada" promptText="Número Chamada" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtChamadaLocal" promptText="Chamada Local" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtTituloUniforme" promptText="Título Uniforme" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtIsbn" promptText="ISBN" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtSerie" promptText="Série" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtEdicao" promptText="Edição" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtColecao" promptText="Coleção" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtNotasGerais" promptText="Notas Gerais" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtIssn" promptText="ISSN" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtVolume" promptText="Volume" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtPeriodicidade" promptText="Periodicidade" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtNome" promptText="Nome" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtTipo" promptText="Tipo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>

                <Separator/>

                <!-- Botão -->
                <Button text="Salvar Alterações" onAction="#salvarAlteracoes"
                        style="-fx-background-color: #006494; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </children>
        </VBox>
    </center>
</BorderPane>
