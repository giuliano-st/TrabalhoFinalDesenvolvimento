<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="460" prefWidth="780" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inf.grupo.trabalhofinalrev2.controller.LivroController">

    <top>
        <ToolBar>
            <Button onAction="#onNovo" text="Novo" />
            <Button onAction="#onSalvar" text="Cadastrar" />
        </ToolBar>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <padding><Insets topRightBottomLeft="10" /></padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="15" />
                <ColumnConstraints percentWidth="35" />
                <ColumnConstraints percentWidth="15" />
                <ColumnConstraints percentWidth="35" />
            </columnConstraints>

            <!-- Linha 1 -->
            <Label text="Titulo" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Nº Edição" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="txtNome" GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <!-- Linha 2 -->
            <Label text="Data de Publicação" GridPane.columnIndex="0" GridPane.rowIndex="1" />

            <Label text="ISSN" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label text="Editora" GridPane.rowIndex="2" />
            <Label text="Localização Física" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label text="Capa" GridPane.rowIndex="3" />
            <Label text="Descrição Física" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Label text="Assunto" GridPane.rowIndex="4" />
            <Label text="Peridiocidade" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField GridPane.columnIndex="3" GridPane.rowIndex="4" />
            <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            <rowConstraints>
                <RowConstraints maxHeight="22.0" minHeight="0.0" prefHeight="22.0" />
                <RowConstraints maxHeight="50.0" minHeight="28.0" prefHeight="28.0" />
                <RowConstraints maxHeight="50.0" minHeight="28.0" prefHeight="28.0" />
                <RowConstraints maxHeight="60.0" minHeight="28.0" prefHeight="33.0" />
                <RowConstraints maxHeight="50.0" minHeight="0.0" prefHeight="27.0" />
            </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
