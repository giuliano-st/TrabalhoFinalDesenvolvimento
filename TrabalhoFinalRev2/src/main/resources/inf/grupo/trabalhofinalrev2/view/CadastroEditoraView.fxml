<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="400.0" spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inf.grupo.trabalhofinalrev2.controller.CadastroEditoraController">
    <children>
        <Label text="Nova Editora" textFill="#006494">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <VBox spacing="5.0">
            <children>
                <Label text="Digite o nome da nova editora:" />
                <TextField fx:id="txtNovaEditora" promptText="Nome da Editora (Ex: Rocco, Companhia das Letras)" />
            </children>
        </VBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button onAction="#cancelar" text="Cancelar" />
                <Button onAction="#salvar" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-weight: bold;" text="Salvar" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>