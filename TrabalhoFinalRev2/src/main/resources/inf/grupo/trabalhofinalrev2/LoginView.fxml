<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="302.0" prefWidth="440.0" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inf.grupo.trabalhofinalrev2.controller.LoginController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Interface de Login" />

    <!-- Campo Usuário -->
    <HBox alignment="CENTER" spacing="10">
        <Label minWidth="40.0" prefHeight="17.0" prefWidth="49.0" text="Usuário:" />
        <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="194.0" promptText="Digite seu usuário" />
    </HBox>

    <!-- Campo Senha -->
    <HBox alignment="CENTER" prefHeight="25.0" prefWidth="309.0" spacing="10">
        <Label minWidth="50.0" prefHeight="17.0" prefWidth="50.0" text="Senha:" />
        <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="194.0" promptText="Digite sua senha" />
    </HBox>

    <!-- Botões -->
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#onLoginClick" prefHeight="25.0" prefWidth="140.0" text="Entrar" />
        <Button onAction="#onCancelClick" prefHeight="25.0" prefWidth="140.0" text="Cancelar" />
    </HBox>

    <!-- Mensagem -->
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />

</VBox>
