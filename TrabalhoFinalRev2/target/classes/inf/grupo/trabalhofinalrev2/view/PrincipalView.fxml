<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="460" prefWidth="780"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inf.grupo.trabalhofinalrev2.controller.PrincipalController">

    <!-- Barra superior -->
    <top>
        <ToolBar>
            <MenuBar>
                <Menu text="Cadastro">
                    <MenuItem text="Livro" onAction="#onCadastroLivro"/>
                    <MenuItem text="Jornal" onAction="#onCadastroJornal"/>
                    <MenuItem text="Revista" onAction="#onCadastroRevista"/>
                </Menu>
                <Menu text="Consulta">
                    <MenuItem text="Livro" onAction="#onConsultaLivro"/>
                    <MenuItem text="Jornal" onAction="#onConsultaJornal"/>
                    <MenuItem text="Revista" onAction="#onConsultaRevista"/>
                </Menu>
                <Menu text="Sair">
                    <MenuItem text="Fechar" onAction="#onSair"/>
                </Menu>
            </MenuBar>
        </ToolBar>
    </top>

    <!-- Rodapé -->
    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="15.0" />
                <ColumnConstraints percentWidth="35.0" />
                <ColumnConstraints percentWidth="40.0" />
                <ColumnConstraints percentWidth="10.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

            <!-- Texto de versão -->
            <Label text="Versão 1.0.0"
                   GridPane.columnIndex="3"
                   GridPane.rowIndex="2" />
        </GridPane>
    </bottom>

    <!-- Conteúdo central -->
    <center>
        <ImageView fitHeight="323.0" fitWidth="305.0"
                   pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
