<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="inf.grupo.trabalhofinalrev2.controller.ConsultaRevistaController">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Pesquisar Revistas no Acervo ðŸ“‘" textFill="#006494" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="30" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="30" />
        </columnConstraints>

        <!-- Linha 1 -->
        <Label text="TÃ­tulo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="campoTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Data:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="campoData" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <!-- Linha 2 -->
        <Label text="ISSN:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="campoIssn" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Editora:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="campoEditora" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <!-- Linha 3 -->
        <Label text="Assunto:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="campoAssunto" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Periodicidade:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <ComboBox fx:id="comboPeriodicidade" prefHeight="26.0" prefWidth="140.0" promptText="Selecione" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <TableView fx:id="tabelaRevistas" prefHeight="300" />

    <Button fx:id="btnDetalhes" alignment="CENTER" onAction="#onVerDetalhes" text="Ver detalhes" />
