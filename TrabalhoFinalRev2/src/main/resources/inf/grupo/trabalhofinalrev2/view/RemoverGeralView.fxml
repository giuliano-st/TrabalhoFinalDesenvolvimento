<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="inf.grupo.trabalhofinalrev2.controller.RemocaoGeralController"
      spacing="10" prefWidth="600" prefHeight="400">

    <!-- Seleção de tipo -->
    <ComboBox fx:id="comboTipo" promptText="Selecione o tipo" />

    <!-- Tabela -->
    <TableView fx:id="tabelaObras" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>
            <TableColumn fx:id="colAutor" text="Autor" prefWidth="150"/>
            <TableColumn fx:id="colEditora" text="Editora" prefWidth="150"/>
        </columns>
    </TableView>


    <!-- Botões -->
    <HBox spacing="10">
        <Button text="Remover Selecionado" onAction="#removerSelecionado"
                style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
        <Button text="Atualizar Tabela" onAction="#atualizarTabela" />
    </HBox>

    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
</VBox>
